    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Debug",
            "type": "python",
            "request": "launch",
            "program": "${file}",            
            "justMyCode": true
        },
        {
            "name": "Pytest: Current file",
            "type": "python",
            "request": "launch",                        
            "module": "pytest",            
            "args": [
                "--no-cov ${workspaceFolder}/${file}"
            ],                                   
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "justMyCode": true
        },
        {
            "name": "Pytest: Current test",
            "type": "python",
            "request": "launch",            
            "module": "pytest",            
            "args": [
                "--no-cov ${workspaceFolder}/${file}::${input:pickPytestFoundTest}"
            ],
            "justMyCode": true
        },
    ]
}