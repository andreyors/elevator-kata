    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Debug",
            "type": "python",
            "request": "launch",
            "program": "${file}",            
            "justMyCode": false
        },
        {
            "name": "Pytest: Current file",
            "type": "python",
            "request": "launch",                        
            "module": "pytest",            
            "args": [
                "${workspaceFolder}/test_elevator.py"
            ],                                   
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "justMyCode": false
        }
    ]
}